<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.ddns.swinterberger.payanotherround">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/payanotherround_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".activities.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.TripChooserActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.CreateTrip"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.CreateBill"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SummaryTripUsers"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.UserSummary"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.UserPreferenceActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activities.EditCurrencies"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="net.ddns.swinterberger.payanotherround.activities.EditCurrencies" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>